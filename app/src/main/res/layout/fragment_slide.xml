<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlideFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/background_card"
            android:layout_width="350dp"
            android:layout_height="115dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_view3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:elevation="12dp"
            app:layout_constraintBottom_toBottomOf="@id/background_card"
            app:layout_constraintEnd_toEndOf="@id/background_card"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/background_card"
            app:layout_constraintTop_toTopOf="@id/background_card"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/img_frag"
                android:layout_width="115dp"
                android:layout_height="103dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/img_celular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.51" />

            <TextView
                android:id="@+id/text_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/bebas_neue"
                android:text="Restaurantes"
                android:textColor="@color/white"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                />

            <TextView
                android:id="@+id/text_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-14dp"
                android:fontFamily="@font/bebas_neue"
                android:text="PAGAMENTO"
                android:textColor="@color/white"
                android:textSize="54sp"
                app:layout_constraintEnd_toEndOf="@+id/text_top"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/text_top" />

            <TextView
                android:id="@+id/text_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:rotation="-90"
                android:text="COM"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginEnd="-5dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_bottom"
                app:layout_constraintEnd_toStartOf="@+id/text_bottom"
                app:layout_constraintTop_toTopOf="@+id/text_bottom"
                app:layout_constraintVertical_bias="0.419" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_view"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/text_top"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text_top"
                app:layout_constraintTop_toBottomOf="@+id/text_bottom"
                 />

            <TextView
                android:id="@+id/text_in_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bebas_neue"
                android:padding="5dp"
                android:text="Na entrega"
                android:textColor="#A6000000"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="@+id/view"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toTopOf="@+id/view" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>